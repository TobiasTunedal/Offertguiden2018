@model IEnumerable<Offertguiden.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
}

<link rel="stylesheet" type="text/css" href="~/css/blogs.css">

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-black.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<br />
<br />
<br />

<div class="col-md-12">
    <h1 id="center"> Offertguidens Blogg</h1>
    <br />
</div>

@foreach (var item in Model)
{
    <div class="col-lg-12">
        <hr />
    </div>
    <a asp-action="Details" asp-route-id="@item.BlogId">
        <div class="col-md-12">

            <div class="col-md-4">
                <img id="refPic" src="@Html.DisplayFor(modelItem => item.Picture)" />

            </div>
            <div class="col-md-8">
                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                <h4>@Html.DisplayFor(modelItem => item.Date)</h4>

                <p class="blogDescription">
                    @Html.DisplayFor(modelItem => item.Text)
                </p>
            </div>
        </div>
        </a>  
        }
